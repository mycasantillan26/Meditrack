<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/calendarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Plans"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imgIcon2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:src="@drawable/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/plansTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarText"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Active"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/plansLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/plansTextView"
        android:background="#33FFFFFF">

        <!-- TextView for Name -->

        <!-- TextView for Dosage -->

        <!-- TextView for Unit -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/dosageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:text="Dosage"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/unitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="(Unit)"
            android:layout_marginStart="150dp"
            android:layout_marginTop="4dp"
            android:textSize="20sp" />

        <!-- TextView for Intake Method -->
        <TextView
            android:id="@+id/intakeMethodTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Intake Method"
            android:layout_marginTop="5dp"
            android:layout_below="@id/unitTextView" />

        <!-- TextView for Time -->
        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Time"
            android:layout_marginTop="5dp"
            android:layout_marginStart="100dp"
            android:layout_below="@id/unitTextView" />

        <!-- TextView for Days -->
        <TextView
            android:id="@+id/daysTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Days"
            android:layout_marginTop="5dp"
            android:layout_marginStart="150dp"
            android:layout_below="@id/unitTextView" />

    </RelativeLayout>


    <TextView
        android:id="@+id/noPlansText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You still don't have any plans"
        android:layout_below="@id/imgIcon2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Plan"
        android:layout_below="@id/noPlansText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:background="@color/skyblue" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/profile123"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:contentDescription="Profile"
        android:onClick="onProfileButtonClick" />

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#D9D9D9"
        android:padding="8dp"
        android:alpha="0.3">


        <ImageButton
            android:id="@+id/todayIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Today Icon"
            android:onClick="onTodayIconClick"
            android:scaleType="fitCenter"
            android:src="@drawable/home123"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/calendarIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/calendar123"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:onClick="onCalendarIconClick"
            android:contentDescription="Calendar Icon"/>

        <!-- FrameLayout to contain the imgIcon and white background -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <!-- White background for imgIcon -->
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circle_white_background"
                android:contentDescription="Background"
                android:layout_gravity="center"/>

            <!-- imgIcon ImageButton -->
            <ImageButton
                android:id="@+id/imgIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:onClick="onImgIconClick"
                android:layout_gravity="center"
                android:contentDescription="Image Icon"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/trackerIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/tracker"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:onClick="onSettingsIconClick"
            android:contentDescription="Tracker Icon"/>
    </LinearLayout>

</RelativeLayout>
